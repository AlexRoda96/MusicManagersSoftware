<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.musicmanagerssoftware.base.Cancion" table="cancion" schema="musicdb">
        <id name="id">
            <column name="id" sql-type="int(10)"/>
        </id>
        <property name="titulo">
            <column name="titulo" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="fechaPublicacion">
            <column name="fechaPublicacion" sql-type="date" not-null="true"/>
        </property>
        <property name="formato">
            <column name="formato" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="genero">
            <column name="genero" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="discografica">
            <column name="discografica" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="productor">
            <column name="productor" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="duracion">
            <column name="duracion" sql-type="int(10)" not-null="true"/>
        </property>
        <property name="colaboraciones">
            <column name="colaboraciones" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="videoclip">
            <column name="videoclip" sql-type="tinyint(1)" not-null="true"/>
        </property>
        <property name="enlaceYoutube">
            <column name="enlaceYoutube" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="cuentaSpotify">
            <column name="cuentaSpotify" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <many-to-one name="artista" class="com.musicmanagerssoftware.base.Artista"/>
        <many-to-one name="grupo" class="com.musicmanagerssoftware.base.Grupo"/>
        <many-to-one name="disco" class="com.musicmanagerssoftware.base.Disco"/>
        <list name="conciertos" inverse="true" table="concierto_cancion" schema="musicdb" catalog="">
            <key>
                <column name="id_cancion"/>
            </key>
            <many-to-many not-found="ignore" class="com.musicmanagerssoftware.base.Concierto">
                <column name="id_concierto"/>
            </many-to-many>
        </list>
    </class>
</hibernate-mapping>