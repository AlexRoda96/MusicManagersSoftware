<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.musicmanagerssoftware.base.Artista" table="artista" schema="musicdb">
        <id name="id">
            <column name="id" sql-type="int(10)"/>
        </id>
        <property name="nombreArtistico">
            <column name="nombreArtistico" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="nombre">
            <column name="nombre" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="primerApellido">
            <column name="primerApellido" sql-type="varchar(25)" length="25"/>
        </property>
        <property name="segundoApellido">
            <column name="segundoApellido" sql-type="varchar(25)" length="25" not-null="true"/>
        </property>
        <property name="dni">
            <column name="dni" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="fechaNacimiento">
            <column name="fechaNacimiento" sql-type="date" not-null="true"/>
        </property>
        <property name="paisNacimiento">
            <column name="paisNacimiento" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="numTelefono">
            <column name="numTelefono" sql-type="varchar(15)" length="15" not-null="true"/>
        </property>
        <property name="generoMusical">
            <column name="generoMusical" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="tipoMusico">
            <column name="tipoMusico" sql-type="varchar(25)" length="25" not-null="true"/>
        </property>
        <property name="foto">
            <column name="foto" sql-type="longblob" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>