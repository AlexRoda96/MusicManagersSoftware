<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.musicmanagerssoftware.base.Gira" table="gira" schema="musicdb">
        <id name="id">
            <column name="id" sql-type="int(10)"/>
        </id>
        <property name="nombre">
            <column name="nombre" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="fechaInicio">
            <column name="fechaInicio" sql-type="date" not-null="true"/>
        </property>
        <property name="fechaFin">
            <column name="fechaFin" sql-type="date" not-null="true"/>
        </property>
        <many-to-one name="artista" class="com.musicmanagerssoftware.base.Artista"/>
        <many-to-one name="grupo" class="com.musicmanagerssoftware.base.Grupo"/>
        <list name="conciertos" inverse="true">
            <key/>
            <one-to-many not-found="ignore" class="com.musicmanagerssoftware.base.Concierto"/>
        </list>
    </class>
</hibernate-mapping>